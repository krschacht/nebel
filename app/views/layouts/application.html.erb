<!DOCTYPE html>
<html>
<head>
  <title>Bfsu</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
  <header>
    <%= link_to current_user ? topics_path : root_path, class: "logo" do %>
      BFSU Online
    <% end -%>

    <% if current_user %>
      <nav>
        <%= link_to_unless_current "Topics", topics_path -%> ·
        <% if current_user.admin? %>
          <%= link_to_unless_current "Materials", materials_path %> ·
        <% end -%>
        <%= link_to current_user.name, edit_user_path(current_user) -%> ·
        <%= form_tag sessions_path, method: :delete, class: "inline" do %>
          <a href="javascript:void(0)" onclick="this.parentElement.submit()">Sign Out</a>
        <% end -%>
      </nav>
    <% end -%>
  </header>

  <%= content_tag(:div, flash[:notice].html_safe, class: "notice") if flash[:notice] -%>
  <%= content_tag(:div, flash[:alert].html_safe,  class: "alert")  if flash[:alert] -%>
  <%= content_for?(:content) ? yield(:content) : yield %>
</div>

</body>
</html>
