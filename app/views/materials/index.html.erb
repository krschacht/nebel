<h1>Listing materials</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Original name</th>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @materials.each do |material| %>
      <tr>
        <td><%= link_to material.id, material %></td>
        <td><%= material.original_name %></td>
        <td><%= material.name %></td>
        <td><%= link_to 'Edit', edit_material_path(material) %></td>
        <td><%= link_to 'Destroy', material, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

