#loader {
  position: fixed;
  top: 30px;
  left: 50%;
  width: 130px;
  margin-left: -65px;
  color: white;
  background: rgba(0, 0, 0, 0.7) url(<%= image_path("loader.gif") %>) 15px 12px no-repeat;
  padding: 10px 20px 10px 45px;
  box-sizing: border-box;
  border-radius: 5px;
  opacity: 1;
  transition: opacity 400ms 600ms;
}
#loader.hidden {
  opacity: 0;
  display: block;
}
